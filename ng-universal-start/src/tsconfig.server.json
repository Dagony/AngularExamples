{
  "extends" : "../tsconfig.json",
  "compilerOptions" : {
    "outDir" : "../out-tsc/app",
    "baseUrl" : "./",
    "module" : "commonjs",
    "target": "es6",
    "types" : [],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include" : [
    "server.ts",
    "**/*.ts"
  ],
  "exclude" : [
    "test.ts",
    "**/*.spec.ts",
    "src/**/*.spec.ts"
  ],
  "angularCompilerOptions" : {
    "entryModule" : "app/app.server.module#AppServerModule",
    "experimentalDecorators": true
  }
}
